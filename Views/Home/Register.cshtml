@model WebApplication1.Models.RegisterModelcs
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/SharedLayout.cshtml";
}

<section class="vh-100 bg-image" style=" margin: 40px">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px">
                        <div class="card-body">
                            <h2 class="text-uppercase text-center mb-5">Tạo tài khoản</h2>
                            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                <form>
                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control"})
                                        <label class="form-label" for="form3Example1cg">Họ và Tên</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                        <label class="form-label" for="form3Example4cg">Số điện thoại</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus" })
                                        <label class="form-label" for="form3Example3cg">Email</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
                                        <label class="form-label" for="form3Example4cg">Mật khẩu</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(model => model.Addess, new { @class = "form-control" })
                                        <label class="form-label" for="form3Example4cdg">Địa chỉ</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(model => model.Birth, new { @class = "form-control", @type="date" })
                                        <label class="form-label" for="form3Example4cdg">Ngày sinh</label>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-block mb-4">Đăng ký</button>
                                    </div>

                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

