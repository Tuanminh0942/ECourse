@model IEnumerable<WebApplication1.Models.Course>

@{
    ViewBag.Title = "Khóa học mới";
    Layout = "~/Areas/Admin/Views/Shared/SharedLayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Khóa học mới thêm ngày @DateTime.Today.ToString("dd-MM-yyyy")</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>Tiêu đề khóa học</th>>
                                        <th>Hình ảnh</th>
                                        <th>Số bài giảng</th>
                                        <th>Phân loại</th>
                                        <th>Giảng Viên</th>
                                        <th>Xem chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@i</td>
                                                <td>@item.Titles</td>
                                                <td><img src="~/Assets/img/Course/@item.Images" width="100px" /></td>
                                                <td>@item.Sessions.Count(x => x.courseID == item.ID)</td>
                                                <td>@item.Category.CategoryName</td>
                                                <td>@item.Teacher.FullName</td>
                                                <td style="text-align:center; vertical-align: middle;" class="center">
                                                    <button class="btn btn-default btnEdit" data-id="@item.ID" title="Chi tiết khóa học" onclick="location.href= '/Admin/Course/ViewChitiet?id=@item.ID'"><i class="fa fa-edit fa-fw"></i></button>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

