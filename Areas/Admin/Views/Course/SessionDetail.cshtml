@model WebApplication1.Models.Session

@{
    ViewBag.Title = "SessionDetail";
    Layout = "~/Areas/Admin/Views/Shared/SharedLayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Chi tiết bài giảng</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-10">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form role="form">
                                        @Html.HiddenFor(model => model.ID)
                                        <div class="form-group col-lg-6">
                                            <label>Tiêu đề: @Html.DisplayFor(model => model.Titles)</label>
                                        </div>
                                        <div class="form-group col-lg-6">
                                            <label>Khóa học: @Html.DisplayFor(model => model.Course.Titles)</label>
                                        </div>
                                        <div class="form-group col-lg-12">
                                            <div class="single-post-wrap">
                                                <iframe width="920" height="473" src=@Model.Link title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                            </div>
                                        </div>
                                        <div class="form-group col-lg-12">
                                            <label>Nội dung</label>
                                            <textarea readonly id="text_Description" class="form-control" style="min-height: 200px">@Html.DisplayFor(model => model.Description)</textarea>
                                        </div>
                                        <div class="form-group col-lg-12">
                                            <label>File bài luận</label>
                                            <p>Tải file bài tập: <a href="/course/downloadfile?file=@Model.File">@Model.File</a></p>
                                        </div>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->

    <!-- /#wrapper -->

}
@section Ckeditor{
    <script>
        CKEDITOR.replace("text_Description")
    </script>}