@model IEnumerable<WebApplication1.Models.Essay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/SharedLayoutAdmin.cshtml";
}



<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh sách bài tập của học viên</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="page-header"></h1>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>Họ và tên</th>
                                        <th>Giảng viên</th>
                                        <th>Khóa học</th>
                                        <th>Bài học</th>
                                        <th>Ngày nộp</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;
                                        foreach (var item in Model)
                                        {
                                                <tr class="odd gradeX">
                                                    <td>@i</td>
                                                    <td>@item.User.FullName</td>
                                                    <td>@item.Session.Course.Teacher.FullName</td>
                                                    <td>@item.Session.Course.Titles</td>
                                                    <td>@item.Session.Titles</td>
                                                    <td>@item.DateCmt.Value.ToString("dd-MM-yyyy")</td>
                                                    <td>@{ if (item.Score != null)
                                                        {
                                                               <p>Điểm: <label class="label label-danger">@item.Score</label></p>
                                                        }
                                                            else
                                                        {
                                                               <label class="label label-warning">chưa chấm điểm</label>
                                                        }
                                                        }
                                                    </td>
                                                    <td style="text-align:center; vertical-align: middle;" class="center">
                                                        <button class="btn btn-default btnEdit" data-id="@item.ID" title="Chi tiết" onclick="location.href= '/Admin/Essay/Detail?id=@item.ID'"><i class="fa fa-edit fa-fw"></i></button>
                                                    </td>
                                                </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.File)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCmt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RepDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Session.Titles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.File)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCmt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Session.Titles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
