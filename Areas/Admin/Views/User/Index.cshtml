@model IEnumerable<WebApplication1.Models.User>

@{
    ViewBag.Title = "Danh sách học viên";
    Layout = "~/Areas/Admin/Views/Shared/SharedLayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh sách học viên</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>Họ và tên</th>
                                        <th>Ngày sinh</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th>Chỉnh sửa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;
                                        foreach (var item in Model)
                                        {
                                                <tr class="odd gradeX">
                                                    <td>@i</td>
                                                    <td>@item.FullName</td>
                                                    <td>@item.Birth.Value.ToString("dd-MM-yyyy")</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Phone</td>
                                                    <td>@item.Addess</td>
                                                    <td style="text-align:center; vertical-align: middle;" class="center">
                                                        <button class="btn btn-info btnDelete" data-id="@item.ID" title="Xóa học viên" onclick="if (confirm('Bạn có chắc chắn muốn xóa học viên này không?')) { location.href= '/Admin/User/Delete?id=@item.ID ' }">
                                                            <i class="fa fa-close fa-fw"></i>
                                                        </button>

                                                    </td>
                                                </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

