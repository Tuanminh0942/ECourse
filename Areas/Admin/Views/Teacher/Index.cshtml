@model IEnumerable<WebApplication1.Models.Teacher>
@{
    ViewBag.Title = "Quản lý giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/SharedLayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh sách giảng viên</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">

                        <a href="~/Admin/Teacher/AddGV" class="btn btn-success"><i class="fa fa-plus"></i>Thêm mới</a>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>Họ và tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th>Số khóa học</th>
                                        <th>Chỉnh sửa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@i</td>
                                                <td>@item.FullName</td>
                                                <td>@item.Email</td>
                                                <td class="center">@item.Phone</td>
                                                <td>@item.Address</td>
                                                <td>@item.Courses.Where(x => x.IDTeacher == item.ID).Count()</td>
                                                <td style="text-align:center; vertical-align: middle;" class="center">
                                                    <button class="btn btn-default btnEdit" data-id="@item.ID" title="Chi tiết giảng viên" onclick="location.href= '/Admin/Teacher/Edit?id=@item.ID'"><i class="fa fa-edit fa-fw"></i></button>
                                                    <button class="btn btn-info btnDelete" data-id="@item.ID" title="Xóa giảng viên" onclick="if (confirm('Bạn có chắc chắn muốn xóa giảng viên này không?')) { location.href= '/Admin/Teacher/Delete?id=@item.ID ' }">
                                                        <i class="fa fa-close fa-fw"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

