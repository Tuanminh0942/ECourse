@{ 
    List<WebApplication1.Models.Join> HocVien = (List<WebApplication1.Models.Join>)ViewBag.HocVien;
    ViewBag.Title = "Danh sách học viên trong khóa";
    Layout = "~/Areas/GiangVien/Views/Shared/SharedLayoutTeacher.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh sách học viên trong khóa</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="page-header"></h1>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>Họ và tên</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Địa chỉ</th>
                                        <th>Ngày sinh</th>
                                        <th>Ngày đăng ký</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;
                                        foreach (var item in HocVien)
                                        {
                                                <tr class="odd gradeX">
                                                    <td>@i</td>
                                                    <td>@item.User.FullName</td>
                                                    <td>@item.User.Email</td>
                                                    <td>@item.User.Phone</td>
                                                    <td>@item.User.Addess</td>
                                                    <td>@item.User.Birth.Value.ToString("dd-MM-yyyy")</td>
                                                    <td>@item.Date.ToString("dd-MM-yyyy")</td>
                                                    <td style="text-align:center; vertical-align: middle;" class="center">
                                                        <button class="btn btn-default btnEdit" data-id="@item.ID" title="Chi tiết khóa học" onclick="location.href= '/GiangVien/Essay/Update?id=@item.ID'"><i class="fa fa-edit fa-fw"></i></button>
                                                    </td>
                                                </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



