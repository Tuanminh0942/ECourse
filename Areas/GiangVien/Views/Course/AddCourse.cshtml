@model WebApplication1.Models.Course

@{
    ViewBag.Title = "Thêm khóa học";
    Layout = "~/Areas/GiangVien/Views/Shared/SharedLayoutTeacher.cshtml";
}

<
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm mới khóa học</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm("AddCourse", "Course", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label>Tiêu đề</label>
                                        @Html.EditorFor(model => model.Titles, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                    <div class="form-group">
                                        <label>Nội dung</label>
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { id = "text_Description", @class = "form-control" } })

                                    </div>
                                    <div class="form-group">
                                        <label>Hình Ảnh</label>
                                        <input style="margin-top: 15px" name="Images" type="file" onchange="readURL(this)" />
                                        <img id="blah" src="#" alt="your image" style=" margin-left: 15px" width="100px" />
                                    </div>
                                    <div class="form-group">
                                        <label>Phân loại</label>
                                        <select name="IDCategory">
                                            @foreach (var item in new WebApplication1.Models.DAO.CategoryDao().DanhSach())
                                            {
                                                <option value="@item.ID">@item.CategoryName</option>
                                            }
                                        </select>

                                    </div>
                                    <button type="submit" value="Tạo" class="btn btn-default">Tạo</button>
                                    <button class="btn btn-default" onclick="location.href='/GiangVien/Course/Index'">Quay lại</button>
                                }
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
<!-- /#wrapper -->
}
@section Ckeditor{
    <script>
        CKEDITOR.replace("text_Description")
    </script>
    }