@model WebApplication1.Models.Session

@{
    int ma = int.Parse(Request.QueryString["ma"]);
    ViewBag.Title = "AddBG";
    Layout = "~/Areas/GiangVien/Views/Shared/SharedLayoutTeacher.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Thêm mới bài giảng</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm("AddBG", "Session",new { ma = 1 },  FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                <input name="courseID" value="@ma" type="hidden"/>
                                    <div class="form-group col-lg-6">
                                        <label>Tên bài giảng</label>
                                        @Html.EditorFor(model => model.Titles, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <label>Link Youtube</label>
                                        @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<p class="help-block">VD: www.youtube.com/embed/... </p>*@
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <label>Nội dung </label>
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { id = "txtNoiDung", @class = "form-control" } })
                                    </div>
                                    @*<div class="form-group">
                                        <label>Khóa học</label>
                                        <select name="courseID">
                                            @foreach (var item in new WebApplication1.Models.DAO.CourseDao().DanhSach())
                                            {
                                                <option value="@item.ID">@item.Titles</option>
                                            }
                                        </select>
                                    </div>*@
                                    <div class="form-group col-lg-6">
                                        <label>File bài luận</label>
                                        <input name="File" type="file" id="File" accept=".doc, .docx, .pdf">
                                        <p class="help-block">Chọn file word hoặc pdf.</p>
                                    </div>
                                    <div class="form-group col-lg-12 text-center">
                                        <button type="submit" class="btn btn-primary btn-lg">Cập nhật</button>
                                    </div>
                                }
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
@section Ckeditor
{<script>
    CKEDITOR.replace("txtNoiDung")
</script>
    }
    
