@model IEnumerable<WebApplication1.Models.Session>

@{
    string ma = Request.QueryString["id"];
    ViewBag.Title = "Index";
    Layout = "~/Areas/GiangVien/Views/Shared/SharedLayoutTeacher.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Danh sách bài giảng</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="~/GiangVien/Session/AddBG?ma=@ma" class="btn btn-success"><i class="fa fa-plus"></i>Thêm mới</a>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>Tiêu đề bài giảng</th>>
                                        <th>Xem chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr class="odd gradeX">
                                                <td>@i</td>
                                                <td>@item.Titles</td>
                                                <td style="text-align:center; vertical-align: middle;" class="center">
                                                    <button class="btn btn-default btnEdit" data-id="@item.ID" title="Chi tiết bài học" onclick="location.href= '/GiangVien/Session/Detail?id=@item.ID'">
                                                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                                                    </button>
                                                    <button class="btn btn-info btnDelete" data-id="@item.ID" title="Xóa bài học học" onclick="if (confirm('Bạn có chắc chắn muốn xóa bài học này không?')) { location.href= '/GiangVien/Session/Delete?id=@item.ID ' }">
                                                        <i class="fa fa-close fa-fw"></i>
                                                    </button>
                                                    <button class="btn btn-default btnEdit" data-id="@item.ID" title="Chỉnh sửa bài học" onclick="location.href= '/GiangVien/Session/Update?id=@item.ID'"><i class="fa fa-edit fa-fw"></i></button>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
